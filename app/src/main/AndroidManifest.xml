<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.varshini.pedometer">
    <!--To allow permissions to read and write to the txt file-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Pedometer_mainscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".History"></activity>
        <activity android:name=".DisplayGraph"></activity>
        <activity
            android:name=".UserSettings"
            android:label="@string/title_activity_user_settings"
            android:parentActivityName=".Pedometer_mainscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.varshini.pedometer.Pedometer_mainscreen" /></activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
    </manifest>

